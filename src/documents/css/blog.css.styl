section#content
	margin-top 80px
	article
		font-size 18px
		font-weight 200
		line-height 180%
		border-bottom 1px solid #EAEAEA
		max-width 940px
		box-sizing border-box
		padding 0 60px 50px
		margin-bottom 40px
		img
			width 100%
			height auto
		footer
			float none
			clear both
			height auto
		h2
			font-weight 100
			font-size 37px
			letter-spacing -2px
			margin-bottom 28px
			a
				color #373435
		p
			margin 20px 0
		.published
			font-size 16px
			color #A7A7A7
#disqus_thread
	box-sizing border-box
	padding 0 20px 60px
	width 100%
@media screen and (max-width: 522px)
	section#content
		article
			padding 0 30px 30px